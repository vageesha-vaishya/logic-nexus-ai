# New Supabase Cloud Configuration
# Copy this file to: new-supabase-config.env
# Fill in your new Supabase project credentials

# ========================================
# Database Connection
# ========================================
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# Get from: Project Settings → Database → Connection String
NEW_DB_URL="postgresql://postgres:YOUR_DB_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

# ========================================
# API Configuration
# ========================================
# Get from: Project Settings → API
NEW_SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"
NEW_SUPABASE_ANON_KEY="your_anon_key_here"
NEW_SUPABASE_SERVICE_ROLE_KEY="your_service_role_key_here"
NEW_PROJECT_ID="YOUR_PROJECT_REF"

# ========================================
# Application Environment
# ========================================
# Copy these to your .env file after migration
VITE_SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"
VITE_SUPABASE_PUBLISHABLE_KEY="your_anon_key_here"
VITE_SUPABASE_PROJECT_ID="YOUR_PROJECT_REF"

# ========================================
# Migration Settings (Optional)
# ========================================
# Batch size for data import (adjust for large tables)
IMPORT_BATCH_SIZE=1000

# Enable verbose logging
VERBOSE_LOGGING=true

# Temporary disable RLS during import (recommended)
DISABLE_RLS_DURING_IMPORT=true
